<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_t5preview"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <p.sby.gs_qca.util.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="sticky"
                    android:background="@color/tv_gray_normal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="28sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="学院："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_institute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="5dp"
                        android:ems="10"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="专业："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:inputType="textMultiLine"
                        android:paddingRight="15dp"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="导师姓名："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="学生姓名："
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="学历状况："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="答辩日期："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />

                    <!--<TextView
                        android:id="@+id/t5pre_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="年"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="月"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="日"
                        android:textColor="@color/black"
                        android:textSize="18dp" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="答辩地点："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="答辩组成员："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="sticky"
                    android:background="@color/tv_gray_normal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价信息"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="28sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="325dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="综合得分："
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/t5pre_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="论文答辩会的整体情况如何，优点有哪些？"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/t5pre_comment1"
                    android:layout_width="296dp"
                    android:layout_height="269dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:text="论文答辩会存在哪些问题？请为该院或研究生院的工作提出一些具体的改进措施。"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t5pre_comment2"
                    android:layout_width="296dp"
                    android:layout_height="269dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/t5pre_save"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@color/successColor"
                        android:text="存到草稿箱"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/t5pre_submit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@color/successColor"
                        android:text="确认提交"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </p.sby.gs_qca.util.StickyScrollView>
</android.support.design.widget.AppBarLayout>





