<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="检查项目与评分"
            android:textColor="@color/black"
            android:background="@color/tv_gray_lit"
            android:textSize="30dp"

            />

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="67dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="综合得分："
            android:textSize="30dp" />

        <EditText
            android:id="@+id/t5_totalscore"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_bg"
            android:hint="满分100分"
            android:inputType="number|numberDecimal"
            android:textColor="@color/black" />

    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="论文答辩会的整体情况如何，优点有哪些？"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/t5c_mic"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_microphone" />

        <EditText
            android:id="@+id/t5c_text1"
            android:layout_width="332dp"
            android:layout_height="166dp"
            android:gravity="start"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg"
            />

        <TextView
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="论文答辩会存在哪些问题？请为该院或研究生院的工作提出一些具体的改进措施。"
            android:textSize="20dp" />



        <ImageView
            android:id="@+id/t5_mic2"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_microphone" />

        <EditText
            android:id="@+id/t5c_text2"
            android:layout_width="332dp"
            android:layout_height="166dp"
            android:gravity="start"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg"
            />

        <Button
            android:id="@+id/t5c_ButtonNext"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/successColor"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>




</ScrollView>