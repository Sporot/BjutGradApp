<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/bgdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="课堂信息"
        android:background="@color/tv_gray_lit"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="应到人数："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/t1_shouldnum"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_bg"
            android:ems="10"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="实到人数："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/t1_actualnum"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_bg"
            android:ems="10"
            android:hint="请填写实际到课人数"
            android:inputType="number"
            android:focusable="true"

            android:focusableInTouchMode="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="迟到人数："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/t1_latenumm"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_bg"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请填写迟到人数"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="授课专题："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/t1_teachtheme"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_bg"
            android:ems="10"
            android:hint="请填写授课专题"
            android:focusable="true"

            android:focusableInTouchMode="true"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="听课节次："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/t1_classnum"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_bg"
            android:ems="10"
            android:hint="请填写听课节次"
            android:textSize="17dp"
            android:focusable="true"

            android:focusableInTouchMode="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:spinnerMode="dialog" />


    </LinearLayout>




</LinearLayout>
</ScrollView>